{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Iinclude",
                "src/input/input.cpp",
                "src/core/scene.cpp",
                "src/graphics/texture.cpp",
                "src/graphics/shader.cpp",
                "src/core/app.cpp",
                "src/core/fps.cpp",
                "src/level/maploader.cpp",
                "src/graphics/drawlevel.cpp",
                "src/utils/assets.cpp",
                "src/core/game.cpp",
                "src/level/level.cpp",
                "src/level/levelmetrics.cpp",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lGLEW",
                "-lGL",
                "-lGLU",
                "-lglut"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}